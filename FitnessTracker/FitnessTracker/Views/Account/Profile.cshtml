@model Core.Entities.AppUser
@{
    ViewData["Title"] = "Profile";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle display-3 text-primary"></i>
                        <h2 class="mt-2">@Model.FirstName @Model.LastName</h2>
                        <p class="text-muted">@Model.Email</p>
                    </div>
                    <ul class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-calendar-date me-2"></i>Date of Birth</span>
                            <span>@Model.DateOfBirth.ToString("yyyy-MM-dd")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-gender-ambiguous me-2"></i>Gender</span>
                            <span>@Model.Gender</span>
                        </li>
                    </ul>
                    <div class="d-flex justify-content-between">
                        <form asp-action="Logout" asp-controller="Account" method="post">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                            </button>
                        </form>
                        <a asp-action="ChangePassword" class="btn btn-primary">
                            <i class="bi bi-key me-1"></i>Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 